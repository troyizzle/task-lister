<div class="modal-header">
  <h5 class="modal-title" id="staticBackdropLabel">New Item</h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<%= form_with(model: @task_item, local: false, url: @task_item.id? ? task_list_item_path(@task_item.list, @task_item) : task_list_items_path) do |form| %>
  <div class="modal-body">
    <% if @task_item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task_item.errors.count, "error") %> prohibited this task_item from being saved:</h2>

        <ul>
          <% @task_item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :list_id, value: @task_item.list_id %>

    <div class="form-group row">
      <%= form.label :title, { class: 'form-label col-sm-2' } %>
      <div class="col-sm-10">
        <%= form.text_field :title, { class: 'form-control '} %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :body, { class: 'form-label col-sm-2' } %>
      <div class="col-sm-10">
        <%= form.text_area :body, { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :due, { class: 'form-label col-sm-2' } %>
      <div class="col-sm-6">
        <%= form.number_field :due, { class: 'form-control' } %>
      </div>
      <span class="col-sm-4">Days after start</span>
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= form.submit 'Add', class: 'btn btn-primary' %>
  </div
<% end %>
